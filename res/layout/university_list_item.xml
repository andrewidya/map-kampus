<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp" >
	    <ImageView
	        android:id="@+id/logo"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:src="@drawable/college" />        

		<TextView
		    android:id="@+id/universityName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_toRightOf="@id/logo"
		    style="@style/CollegeName" />
	        
		<TextView
		    android:id="@+id/universitySureName"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignParentRight="true"
		    android:layout_below="@id/universityName"
		    android:layout_toRightOf="@id/logo"
		    style="@style/CollegeSureName" />
	
		<TextView
		    android:id="@+id/address"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:layout_alignRight="@+id/universitySureName"
		    android:layout_below="@id/universitySureName"
		    android:layout_toRightOf="@id/logo"
		    style="@style/CollegeAddress" />

</RelativeLayout>