<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="HeaderText" parent="@style/AppBaseTheme">
        <item name="android:textColor">#495353</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="LayoutBackground1" parent="@style/AppBaseTheme">
        <item name="android:background">#dcf5f4</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="LayoutBackground2" parent="@style/AppBaseTheme">
        <item name="android:background">#a9c9c8</item>        
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="ContentText" parent="@style/AppBaseTheme" >
        <item name="android:textColor">#495353</item>
        <item name="android:textSize">15sp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:gravity">fill_horizontal</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
    <style name="CollegeName" parent="@android:style/TextAppearance" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0f0f0f</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="CollegeSureName" parent="@android:style/TextAppearance" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#0f0f0f</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="CollegeAddress" parent="@android:style/TextAppearance" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">italic</item>
        <item name="android:textColor">#999999</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="CollegeDetailsHeader" parent="@android:style/TextAppearance" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#007f00</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingTop">8dp</item>
    </style>
    <style name="CollegeDetailsContent" parent="@android:style/TextAppearance" >
        <item name="android:typeface">sans</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#333333</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">4dp</item>
    </style>

</resources>